@model IEnumerable<StudentManagementSystem.Models.Exam>
@{
    ViewData["Title"] = "Quản lý bài kiểm tra";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-alt"></i> Quản lý bài kiểm tra</h2>
    <a href="@Url.Action("CreateExam")" class="btn btn-success">
        <i class="fas fa-plus"></i> Tạo bài kiểm tra mới
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Mô tả</th>
                            <th>File đính kèm</th>
                            <th>Lịch thi</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exam in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@exam.Title</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(exam.Description))
                                    {
                                        <span title="@exam.Description">
                                            @(exam.Description.Length > 50 ? exam.Description.Substring(0, 50) + "..." : exam.Description)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có mô tả</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(exam.FilePath))
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-file"></i> @exam.FileName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Chưa có file</span>
                                    }
                                </td>
                                <td>
                                    @if (exam.ExamSchedules.Any())
                                    {
                                        <span class="badge bg-info">@exam.ExamSchedules.Count lịch thi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Chưa có lịch</span>
                                    }
                                </td>
                                <td>
                                    @exam.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    @if (exam.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Không hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditExam", new { id = exam.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a href="@Url.Action("CreateSchedule", new { examId = exam.Id })" class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-calendar-plus"></i> Tạo lịch thi
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#detailModal-@exam.Id">
                                            <i class="fas fa-eye"></i> Xem
                                        </button>
                                        @if (!exam.ExamSchedules.Any())
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@exam.Id">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có bài kiểm tra nào</h5>
                <p class="text-muted">Hãy tạo bài kiểm tra đầu tiên cho môn học của bạn</p>
                <a href="@Url.Action("CreateExam")" class="btn btn-success">
                    <i class="fas fa-plus"></i> Tạo bài kiểm tra mới
                </a>
            </div>
        }
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.Count()</h4>
                        <p class="mb-0">Tổng bài kiểm tra</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.Count(e => e.IsActive)</h4>
                        <p class="mb-0">Đang hoạt động</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.Sum(e => e.ExamSchedules.Count)</h4>
                        <p class="mb-0">Lịch thi</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.Count(e => !string.IsNullOrEmpty(e.FilePath))</h4>
                        <p class="mb-0">Có file đính kèm</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-paperclip fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
